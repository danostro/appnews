        <% for(var i=0; i<items.length; i++) {%>
         <div class="row">
            <div class="col-md-7">
                
                    <img class="img-responsive" src="<%= items[i].photoUrl%>" alt=""></img>
            </div>
            <div class="col-md-5">
                <h3><%= items[i].title%></h3>
                <p><%= items[i].disc%></p>
                <a class="btn btn-primary" href="<%= items[i].url%>" target="blank">מעבר לכתבה <span class="glyphicon glyphicon-chevron-left"></span></a>
